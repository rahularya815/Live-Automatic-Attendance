<RegisterWindow>:
    name:"register"
	namee:namee
	rno:rno
    FloatLayout:
        pos:0,0
        size:root.width,root.height		
		
		Button:
		    pos_hint: {"x":0.05, "top":0.95}
			size_hint:0.05,0.05
            text: "Back"
            on_release:
                app.root.current = app.stop()
                root.manager.transition.direction = "left"		
				
		GridLayout:
            cols:1
            GridLayout:
                cols:2		
                Label:
                    size_hint: 0.2,0.05
                    pos_hint: {"x":1, "top":0.8}
                    text: "Name: "
                    font_size: 

                TextInput:
                    pos_hint: {"x":0.5, "top":0.8}
                    size_hint: 0.3, 0.05
                    id: namee
                    multiline: False
                    font_size: 

                Label:
                    size_hint: 0.2,0.05
                    pos_hint: {"x":0, "top":0.8-0.13}
                    text: "Roll No. : "
                    font_size: 

                TextInput:
                    pos_hint: {"x":0.5, "top":0.8-0.13}
                    size_hint: 0.3, 0.05
                    id: rno
                    multiline: False
                    font_size:
					
            Button:
			 
		        pos_hint:{"x":root.center}
			    size_hint:0.2,0.1
                text: "Capture Image"
                on_release:
                    app.root.current = "click"
                    root.manager.transition.direction = "left"
					
			Button:
                pos_hint:{"x":0.2,"y":0.05}
                size_hint: 0.6, 0.15
                text: "Submit"
                font_size: 
                on_release:
                    root.manager.transition.direction = "left"
                    root.submit()		
					
					
					
<P>:
    Label:
        text: "Captured!"
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":1}

    Button:
        text: "OK"
        size_hint: 0.8, 0.2
        pos_hint: {"x":0.1, "y":0.1}
		on_release:
		    app.root.current = "register"
			
            




<CameraClick>:
    name:"click"
    
    Camera:
        id: camera
        resolution: (640, 480)
        play: True	
		
    Button:
        text: 'Capture'
        size_hint_y: None
        height: '48dp'
        on_press: root.capture()
