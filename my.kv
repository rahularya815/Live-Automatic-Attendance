<CameraClick>:
    name:"click"
    
    Camera:
        id: camera
        resolution: (640, 480)
        play: True	
		
    Button:
        text: 'Capture'
        size_hint_y: None
        height: '48dp'
        on_press: root.capture()


<Automatic>:
    name:"autoattend"
    
	FloatLayout:
        pos:0,0
		size:root.width,root.height
    
        Button:
	        pos_hint: {"x":0.05, "top":0.95}
	        size_hint:0.05,0.05
            text: "Back"
            on_release:
                app.root.current = "second"
		        root.manager.transition.direction = "right"
	
        Button:
            text: "Start"
            size_hint: 0.2, 0.1
            pos_hint: {"x":0.4, "y":0.45}
	        on_release:
	            app.root.current=root.autoterminate()
		        root.manager.transition.direction = "right"	
